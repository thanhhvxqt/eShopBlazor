@switch (PhanLoai)
{
    case MonAn.PhanLoai.DoAnNhanh:
        <span class="badge bg-success">Đồ ăn nhanh</span>
        break;
    case MonAn.PhanLoai.Drink:
        <span class="badge bg-success">Nước</span>
        break;
    default:
        <span class="badge bg-warning text-dark">Combo</span>
        break;
}


@code {
    [Parameter]
    public MonAn.PhanLoai PhanLoai { get; set; }
}
